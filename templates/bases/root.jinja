<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Entryway > {% block title %}Title{% endblock %}</title>
    <link
      href="{{ url_for('static', filename='styles.css') }}"
      rel="stylesheet"
      type="text/css"
    />
    <script
      src="https://kit.fontawesome.com/64e5c43305.js"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://challenges.cloudflare.com/turnstile/v0/api.js"
      type="text/javascript"
      defer
    ></script>
    <script
      src="https://unpkg.com/htmx.org@2.0.4"
      integrity="sha384-HGfztofotfshcF7+8n44JQL2oJmowVChPTg48S+jvZoztPfvwD79OC/LTtG6dMp+"
      crossorigin="anonymous"
    ></script>
    {% block imports %}
    {% endblock %}
  </head>

  <body>
    <div class="navbar bg-base-200 shadow-xl">
      <div class="flex-1">
        <span class="text-xl font-extrabold">
          <i class="fa-solid fa-dungeon"></i> Entryway
          <span class="text-xs font-normal">by Sound Labs</span>
        </span>
      </div>
      <div class="flex-none">
        <div
          class="tooltip tooltip-left"
          data-tip="{{ 'All systems operational' if health else 'Service impacted' }}"
        >
          <button class="btn btn-square btn-ghost">
            <div class="inline-grid *:[grid-area:1/1]">
              <div
                class="status status-{{ 'success' if health else 'error' }} animate-bounce animate-ping"
              ></div>
              <div
                class="status status-{{ 'success' if health else 'error' }}"
              ></div>
            </div>
          </button>
        </div>
      </div>
    </div>

    <main>
      {% block content %}
      {% endblock %}
    </main>
  </body>
</html>
